#:kivy 2.1.0
<ScreenMain>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint: 1, 0.15

			MDLabel:
				id: subtitle            
				text: "DIGITAL TWIN MOBILE ROBOT AR"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 48
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Logo_Main.png'
                size_hint_x: 0.25
                allow_stretch: True                   

		MDBoxLayout:
			orientation: "horizontal"
			size_hint: 1, 0.85
			padding:10
			spacing:10

			MDBoxLayout:
				size_hint_x: 0.65

				MDRelativeLayout:
					MDBoxLayout:
						id: layout_image
						pos_hint: {"center_x": .5, "center_y": .5}

					Image:
						size_hint_y: 0.75
						pos_hint: {"center_x": .5, "center_y": .5}
						source:'asset/Image_Field.png'
						allow_stretch: True

			MDBoxLayout:
				size_hint_x: 0.35
				orientation: "vertical"
				padding:20
				spacing:50

				MDBoxLayout:
					orientation: "horizontal"
					spacing:50

					Image:
						id: logo_team_red
						size_hint_x: 0.25
						source:'asset/Logo_POLMAN.png'
						allow_stretch: True   

					MDBoxLayout:
						size_hint_x: 0.75
						orientation: "vertical"
						padding:20
						spacing:20				

						MDLabel:
							id: name_team_red
							text: "K21"
							bold: True
							font_size: 40
							color: 0.7, 0, 0
							halign: 'center'
							valign: 'middle'

						MDLabel:
							id: institution_team_red
							text: "Politeknik Manufaktur Bandung"
							bold: True
							font_size: 20
							color: 1, 1, 1
							halign: 'center'
							valign: 'middle'
							md_bg_color: 0.7, 0, 0

				MDBoxLayout:
					orientation: "horizontal"
					spacing:50

					Image:
						id: logo_team_blue
						size_hint_x: 0.25
						source:'asset/Logo_ITB.png'
						allow_stretch: True   

					MDBoxLayout:
						size_hint_x: 0.75
						orientation: "vertical"
						padding:20
						spacing:20				

						MDLabel:
							id: name_team_blue
							text: "DAGOROBO"
							bold: True
							font_size: 40
							color: 0, 0, 0.7
							halign: 'center'
							valign: 'middle'

						MDLabel:
							id: institution_team_blue
							text: "Institut Teknologi Bandung"
							bold: True
							font_size: 20
							color: 1, 1, 1
							halign: 'center'
							valign: 'middle'
							md_bg_color: 0, 0, 0.7

				MDBoxLayout:
					orientation: "horizontal"
					spacing:50

					Image:
						size_hint_x: 0.25
						source:'asset/Logo_Live.png'
						allow_stretch: True   		

					MDLabel:
						text: "KONTES ROBOT INDONESIA TINGKAT NASIONAL"
						bold: True
						font_size: 30
						color: 0, 0, 0
						halign: 'left'
						valign: 'middle'

				MDBoxLayout:
					orientation: "horizontal"
					spacing:50

					Image:
						size_hint_x: 0.35
						source:'asset/Logo_KRTMI.png'
						allow_stretch: True   		

					MDLabel:
						text: "KONTES ROBOT TEMATIK INDONESIA"
						bold: True
						font_size: 40
						color: 0, 0, 0
						halign: 'left'
						valign: 'middle'




				