#:kivy 2.1.0
<ScreenMain>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint: 1, 0.15

			MDLabel:
				id: subtitle            
				text: "DIGITAL TWIN MOBILE ROBOT AR"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 48
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Logo_Main.png'
                size_hint_x: 0.25
                allow_stretch: True                   

		MDBoxLayout:
			orientation: "horizontal"
			size_hint: 1, 0.85
			padding:10
			spacing:10

			MDBoxLayout:
				size_hint_x: 0.6
				MDRelativeLayout:
					MDBoxLayout:
						id: layout_image
						pos_hint: {"center_x": .5, "center_y": .5}

			MDBoxLayout:
				size_hint_x: 0.4
				orientation: "vertical"
				padding:20
				spacing:50

				MDBoxLayout:
					orientation: "horizontal"
					spacing:50

					Image:
						id: logo_team_red
						size_hint_x: 0.25
						source:'asset/Logo_POLMAN.png'
						allow_stretch: True   

					MDBoxLayout:
						size_hint_x: 0.75
						orientation: "vertical"
						padding:20
						spacing:20				

						MDLabel:
							id: name_robot
							text: "ROBOT ID"
							bold: True
							font_size: 30
							color: 0.08, 0.4, 0.6
							halign: 'center'
							valign: 'middle'

						MDLabel:
							id: id_robot
							text: "ID ROBOT"
							bold: True
							font_size: 40
							color: 1, 1, 1
							halign: 'center'
							valign: 'middle'
							md_bg_color: 0.08, 0.4, 0.6

				MDGridLayout:
					cols:2
					padding:20
					spacing:20	
					
					MDLabel:
						text: "POSITION"
						bold: True
						font_size: 30
						color: 0.08, 0.4, 0.6
						halign: 'center'
						valign: 'middle'

					MDLabel:
						id: position_robot
						text: "X:10.2, Y:5.3"
						bold: True
						font_size: 30
						color: 0.08, 0.4, 0.6
						halign: 'center'
						valign: 'middle'

					MDLabel:
						text: "ANGLE"
						bold: True
						font_size: 30
						color: 0.08, 0.4, 0.6
						halign: 'center'
						valign: 'middle'

					MDLabel:
						id: angle_robot
						text: "0.5 deg"
						bold: True
						font_size: 30
						color: 0.08, 0.4, 0.6
						halign: 'center'
						valign: 'middle'

					MDLabel:
						text: "VELOCITY"
						bold: True
						font_size: 30
						color: 0.08, 0.4, 0.6
						halign: 'center'
						valign: 'middle'

					MDLabel:
						id: velocity_robot
						text: "11.4 cm/s"
						bold: True
						font_size: 30
						color: 0.08, 0.4, 0.6
						halign: 'center'
						valign: 'middle'

