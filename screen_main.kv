#:kivy 2.1.0
<ScreenMain>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint: 1, 0.15

			MDLabel:
				id: subtitle            
				text: "DIGITAL TWIN MOBILE ROBOT AR"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 48
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "MAIN SCREEN"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 32
				color: 1, 1, 1

		MDBoxLayout:
			orientation: "horizontal"
			size_hint: 1, 0.75
			padding:10
			spacing:10

			MDBoxLayout:
				id: layout_image
				size_hint_x: 0.65

			MDGridLayout:
				size_hint_x: 0.35
				cols: 2

				MDLabel:
					text: "Label 1"
					bold: True
					font_size: 32
					halign: 'center'
					valign: 'middle'

				MDLabel:
					text: "Variabel 1"
					bold: True
					font_size: 32
					halign: 'center'
					valign: 'middle'
				
				MDLabel:
					text: "Label 2"
					bold: True
					font_size: 32
					halign: 'center'
					valign: 'middle'

				MDLabel:
					text: "Variabel 2"
					bold: True
					font_size: 32
					halign: 'center'
					valign: 'middle'




				